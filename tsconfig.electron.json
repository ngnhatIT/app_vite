{
  "compilerOptions": {
    "target": "ES2021",
    "module": "CommonJS",
    "outDir": "dist-electron",
    "rootDir": "src/main",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "types": ["node", "electron"]
  },
  "include": ["src/main/**/*"],
  "exclude": ["dist", "dist-electron"]
}
